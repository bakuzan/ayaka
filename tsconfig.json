{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["lib/*"],
      "@/*": ["lib/*"]
    },
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2019",
    "module": "esnext",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "modules",
    "tools",
    "__tests__",
    "coverage"
  ]
}
